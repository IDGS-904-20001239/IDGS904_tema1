@model IDGS904_tema1.Models.ConvertidorGrados

@{
    ViewBag.Title = "CalcularTemperatura";
}

<h2>CalcularTemperatura</h2>

@using (Html.BeginForm("CalcularTemperaturaResultado", "Tiendita"))
{
    <div class="form-group">
        <div class="form-group">
            @Html.Label("Valor")
            <div class="col-md-10">
                @Html.EditorFor(model => model.value, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.RadioButtonFor(model => model.opc, 1)@Html.Label("Celsius")
                @Html.RadioButtonFor(model => model.opc, 2)@Html.Label("Fahrenheit")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="name" value="Calcular" />
            </div>
        </div>
    </div>
} 