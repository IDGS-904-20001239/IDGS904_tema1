@model IDGS904_tema1.Models.Traductor

@{
    ViewBag.Title = "Translate";
}

<h2>Translate</h2>
@{
    var response = "";
    if (TempData["translation"] is null)
    {
        response = "Set an existing value";
    }
    else
    {
        response = (string)TempData["translation"];
    }
}
<h3>@response</h3>

@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="form-horizontal">
            @Html.LabelFor(model => model.value, htmlAttributes:
           new { @class = "control-lable col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.value, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.RadioButtonFor(model => model.opc, 0)@Html.Label("Spanish")
                @Html.RadioButtonFor(model => model.opc, 1)@Html.Label("English")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10|">
                <input type="submit" name="name" value="Traducir" />
            </div>
        </div>
    </div>
}
